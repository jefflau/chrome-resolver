{
  "manifest_version": 2,

  "name": "ENS Resolver",
  "description": "ENS resolver that can resolve an Ethereum address or ENS name manually or automatically.",
  "version": "0.0.1",

  "browser_action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "icons": {
    "16": "ens-logo.png",
    "48": "ens-logo.png",
    "128": "ens-logo.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["address_hover.js"],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>",
    "activeTab",
    "tabs"
  ],
  "web_accessible_resources":["ens-logo.png"]
}
